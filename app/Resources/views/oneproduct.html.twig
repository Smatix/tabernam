{% extends "layout.html.twig"%}
{%block content %}
    <div class="container-fluid">
        <div class="row">    
            <div class="col-lg-4 col-lg-offset-4 col-md-10 col-md-offset-1">
                <h1>{{product.name}}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4  col-md-12">
                <img src="{{ asset(  product.image  ) }}" height="400" width="400">
            </div>
            <div class="col-lg-8  col-md-12">
                <p><b>Cena:</b> {{product.price}} z≈Ç</p>
                <p><b>Producent:</b> {{product.producer}}</p>
                <p><b>Kategoria:</b> {{product.category}}</p>
                <p><b>Kod:</b> {{product.code}}</p>
                <a href="{{ path('buy', {'id': product.id}) }}" class="btn btn-default" >Kup</a>
                {% for message in app.session.flashBag.get('error') %}
                    <p class="error">{{ message }}</p>
                {% endfor %}
            </div>
        </div><br/>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <p><b>Opis:</b></p>
                <p>{{product.description}}</p>
            </div>
        </div>

    </div>
{% endblock %}